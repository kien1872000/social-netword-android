<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/txt_email_title"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email của bạn là gì?"/>
    <EditText
        android:id="@+id/edt_signup_email"
        android:layout_below="@id/txt_email_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTintMode="screen"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edt_border"
        android:hint="@string/email_hint"
        android:maxLength="80"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textCursorDrawable="@color/edtHint"
        android:backgroundTint="@color/edtBackground"
        android:textColor="@color/edtColor"
        android:textColorHint="@color/edtHint"/>
    <TextView
        android:id="@+id/txt_email_note"
        android:layout_below="@id/edt_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/line_color"
        android:text="Bạn phải nhập địa chỉ gmail để đăng kí tài khoản của mình."
        android:gravity="center"
        android:lines="2"/>
    <LinearLayout
        android:id="@+id/next_btn_email"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:visibility="invisible"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/login_btn_before_click"
        android:layout_below="@+id/edt_signup_email"
        android:background="@drawable/rounded_corner">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:text="Hãy dùng tên thật để bạn bè dễ dàng nhận ra bạn"
            android:textColor="@color/line_color"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_above="@+id/login_btn_email"/>
    <TextView
        android:id="@+id/login_btn_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Bạn đã có tài khoản?"
        android:textColor="@color/forgot_password"
        android:gravity="center"
        android:layout_margin="20dp"/>
</RelativeLayout>