<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/txt_sex_title"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới tính của bạn là gì?"/>
    <RadioGroup
        android:id="@+id/radio_btn_signup_sex"
        android:layout_marginTop="30dp"
        android:layout_marginStart="2dp"
        android:layout_below="@id/txt_sex_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_male"
            android:paddingStart="300dp"
            android:layoutDirection="rtl"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:buttonTint="@color/line_color"
            android:textColor="@color/forgot_password"
            android:text="Nam"
           />
        <RadioButton android:id="@+id/radio_female"
            android:includeFontPadding="true"
            android:paddingStart="312dp"
            android:layoutDirection="rtl"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:buttonTint="@color/line_color"
            android:layout_margin="10dp"
            android:textColor="@color/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            />
         <RadioButton android:id="@+id/radio_other"
             android:paddingStart="300dp"
             android:layoutDirection="rtl"
             android:layout_gravity="start"
             android:textAlignment="textStart"
             android:buttonTint="@color/line_color"
             android:layout_margin="10dp"
             android:textColor="@color/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khác"
            />

    </RadioGroup>
    <LinearLayout
        android:id="@+id/next_btn_sex"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:visibility="invisible"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/login_btn_before_click"
        android:layout_below="@+id/radio_btn_signup_sex"
        android:background="@drawable/rounded_corner">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:text="Hãy dùng tên thật để bạn bè dễ dàng nhận ra bạn"
            android:textColor="@color/line_color"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_above="@+id/login_btn_sex"/>
    <TextView
        android:id="@+id/login_btn_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Bạn đã có tài khoản?"
        android:textColor="@color/forgot_password"
        android:gravity="center"
        android:layout_margin="20dp"/>
</RelativeLayout>