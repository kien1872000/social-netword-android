<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeBackground"
    >

    <TextView
        android:id="@+id/txt_title_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Giới tính của bạn là gì?"
        android:textColor="@color/forgot_password"
        android:textSize="25dp" />

    <RadioGroup
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/radio_btn_signup_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_sex"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/radio_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="10dp"
            android:buttonTint="@color/line_color"
            android:layoutDirection="rtl"
            android:text="Nam"
            android:textAlignment="textStart"
            android:textColor="@color/forgot_password"/>

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="10dp"
            android:buttonTint="@color/line_color"
            android:includeFontPadding="true"
            android:layoutDirection="rtl"
            android:text="Nữ"
            android:textAlignment="textStart"
            android:textColor="@color/forgot_password" />

        <RadioButton
            android:id="@+id/radio_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="10dp"
            android:buttonTint="@color/line_color"
            android:layoutDirection="rtl"
            android:text="Khác"
            android:textAlignment="textStart"
            android:textColor="@color/forgot_password" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/next_btn_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_btn_signup_sex"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <include layout="@layout/rounded_corner_btn" />
    </LinearLayout>

    <include
        android:id="@+id/login_footer"
        layout="@layout/signup_footer" />
</RelativeLayout>