<?xml version="1.0" encoding="utf-8"?>
<merge>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/homeBackground"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/txt_title"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email của bạn là gì?"/>

        <LinearLayout
            android:id="@+id/edt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title">

            <include layout="@layout/edt_input" />
        </LinearLayout>
        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/txt_note"
            android:layout_below="@id/edt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/line_color"
            android:text="Bạn phải nhập địa chỉ gmail để đăng kí tài khoản của mình."
            android:gravity="center"
            android:lines="2"/>

        <LinearLayout
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_input"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <include layout="@layout/rounded_corner_btn" />
        </LinearLayout>
        <include layout="@layout/signup_footer"
            android:id="@+id/login_footer"/>
    </RelativeLayout>
</merge>