<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/homeBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/txt_display_name_title"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn tên gì?"/>

    <EditText
        android:id="@+id/edt_signup_display_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txt_display_name_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edt_border"
        android:backgroundTint="@color/edtBackground"
        android:backgroundTintMode="screen"
        android:hint="Nhập tên hiển thị"
        android:maxLength="30"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textColor="@color/edtColor"
        android:textColorHint="@color/edtHint"
        android:textCursorDrawable="@color/edtHint" />
    <TextView
        android:id="@+id/txt_display_name_note"
        android:layout_below="@id/edt_signup_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/line_color"
        android:text="Tên hiển thị không quá 30 kí tự\n Bạn nên dùng tên thật để bạn bè có thể dễ dàng nhận ra bạn"
        android:gravity="center"
        android:lines="2"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/next_btn_display_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="5dp"
        android:visibility="invisible"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/edt_signup_display_name"
        >
        <TextView
            android:id="@+id/next_btn_display_name_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/login_btn_before_click"
            android:text="Tiếp tục"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_above="@+id/login_btn_display_name"/>
    <TextView
        android:id="@+id/login_btn_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Bạn đã có tài khoản?"
        android:textColor="@color/forgot_password"
        android:gravity="center"
        android:layout_margin="20dp"/>
</RelativeLayout>